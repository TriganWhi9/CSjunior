[StartCode]
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSjunФ_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int health = 9;
            int maxHealth = 10;
            int mana = 5;
            int maxMana = 10;
            string userInput;

            while(true)
            {
                DrawBar(health, maxHealth, ConsoleColor.Red, 0, '$');
                DrawBar(mana, maxMana, ConsoleColor.Blue, 1, '#');

                Console.WriteLine("Введите число, на которое изменятся жизни:");
                userInput = Console.ReadLine();
                CalculateBarValue(ref health,userInput);
                Console.WriteLine("Введите число, на которое изменятся мана:");
                userInput = Console.ReadLine();
                CalculateBarValue(ref mana, userInput);

                Console.Clear();
            }
        }

        static void DrawBar(int value, int maxValue, ConsoleColor color, int position, char symbol = ' ')
        {
            ConsoleColor defaultColor = Console.BackgroundColor;
            string bar = "";

            for (int i = 0; i < value; i++)
            {
                bar += symbol;
            }

            Console.SetCursorPosition(0,position);
            Console.Write('[');
            Console.BackgroundColor = color;
            Console.Write(bar);
            Console.BackgroundColor = defaultColor;

            bar = "";

            for(int i = value; i < maxValue; i++)
            {
                bar += ' ';
            }
            Console.WriteLine(bar + ']');
        }

        static int CalculateBarValue(ref int value, string valueModifaer)
        {
            string tempValueModifaer = "";

            if (valueModifaer[valueModifaer.Length - 1] == '%')
            {
                for (int i = 0;i < valueModifaer.Length - 1;i++)
                {
                    tempValueModifaer += valueModifaer[i];
                }

                value += Convert.ToInt32(tempValueModifaer)/10;
            }
            else
            {
                value += Convert.ToInt32(valueModifaer);
            }

            return value;
        }
    }
}

[EndCode]
