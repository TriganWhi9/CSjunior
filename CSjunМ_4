[StartCode]
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSjunМ_4
{
    internal class Program
    {
        static void Main(string[] args)
        {
            bool isProgrammOn = true;
            string userInput;
            const string sumCommandMarker = "sum";
            const string exitCommandMarker = "exit";
            float[] numericArray = new float[1];
            float[] expandingNumericArray;
            float sum = 0;
            
            while (isProgrammOn)
            {
                Console.Write("Список команд:" +
                    $"\n {sumCommandMarker} - просуммировать введенные числа" +
                    $"\n {exitCommandMarker} - выход из программы" +
                    "\nВведите число или команду: ");
                userInput = Console.ReadLine();
                Console.Clear();

                switch (userInput)
                {
                    case sumCommandMarker:

                        for (int i = 0; i < numericArray.Length; i++)
                        {
                            sum += numericArray[i];
                        }

                        Console.WriteLine("Сумма введенных чисел равна - " + sum + "\n");
                        sum = 0;
                        break;
                    case exitCommandMarker:
                        isProgrammOn = false;
                        break;
                    default:
                        expandingNumericArray = new float[numericArray.Length + 1];

                        for (int i = 0; i < numericArray.Length; i++)
                        {
                            expandingNumericArray[i] = numericArray[i];
                        }

                        numericArray = expandingNumericArray;
                        numericArray[numericArray.Length - 1] = Convert.ToSingle(userInput);
                        break;
                }
            }
        }
    }
}

[EndCode]
