using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSjunУОиЦ_1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int messegesCount;
            string messege;

            Console.WriteLine("Введите сообщение:");
            messege = Console.ReadLine();   

            Console.Write("Введите желаемое количество сообщений для вывода на экран: ");
            messegesCount = Convert.ToInt32(Console.ReadLine());

            for (int i = 0; i < messegesCount; i++)
            {
                Console.WriteLine(messege);
            }
            Console.ReadKey();
        }
    }
}

[EndCode]
